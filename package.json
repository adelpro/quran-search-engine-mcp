{
  "name": "quran-search-engine-mcp",
  "version": "1.0.0",
  "description": "MCP server wrapping quran-search-engine for AI tools. Provides Quran search, Arabic normalization, and highlighting as CLI tools.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "test": "pnpm build && node scripts/test.js",
    "prepare": "husky"
  },
  "bin": {
    "quran-search-engine-mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "mcp-server",
    "quran",
    "search",
    "arabic",
    "claude",
    "ai"
  ],
  "author": "adelpro <contact@adelpro.us.kg>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adelpro/quran-search-emgine-mcp.git"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "quran-search-engine": "^0.1.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}
